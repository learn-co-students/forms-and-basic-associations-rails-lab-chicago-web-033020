<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title, "Title: " %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name, "Artist Name:"%>
  <%= f.text_field :artist_name %> 
  <br>
  <%= f.label :genre_id, "Genre:" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %> 
  <br>

  <%= f.fields_for :notes do |note| %>
    <%= note.label :note %>
    <%= note.text_area :content %>
  <% end %>
  <br>


  <%= f.submit %>
<% end %>


