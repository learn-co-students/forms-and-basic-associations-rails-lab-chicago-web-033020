<h1>Song Form</h1>

<%= form_for(@song) do |f| %>
    <%= f.label :title, "Song title:" %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :artist_name, "Artist name:" %>
    <%= f.text_field :artist_name %>
    <br>
    <br>
    <%= f.label :"Song genre:" %>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name") %>
    <br>
    <br>

    <h4>Notes:</h4>

    <%= f.fields_for :notes do |note_form| %>
        <%= note_form.label :note, "Note:" %>
        <%= note_form.text_field :content %>
        <br>
        <br>
    <% end %>
    
    <br>
    <br>

    <%= f.submit %>
<% end %>